<div class="row add-user mb-4">
    <h1 class="title-add-user text-center mb-4">Tạo đơn yêu cầu quà tặng</h1>

    <div class="card-body">
        <div class="table-responsive">
            <h3 class="mt-4">Danh sách quà tặng</h3>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th></th>
                        <th>Số lượng mượn</th>
                        <th>Tên quà tặng</th>
                        <th>Danh mục</th>
                        <th>Số lượng có thể mượn</th>
                        <th>Hình ảnh</th>
                    </tr>
                </thead>
                <tbody id="giftList">
                    {{#each gifts}}
                    <tr>
                        <td>
                            <input style="width: 38px;height: 25px;" type="checkbox" class="checkbox" 
                                data-id="{{this._id}}" 
                                data-name="{{ this.name}}"
                                data-category="{{ this.category}}"
                                data-quantity="">
                        </td>
                        <td>
                            <input style="width: 70px;" type="number">
                        </td>
                        <td>{{ this.name }}</td>
                        <td>{{ this.category }}</td>
                        <td>{{ this.available_quantity }}</td>
                        <td><img style="width: 50px;" src="{{this.images}}" alt=""></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div id="summarySelected" class="mt-3">
            <h5>Quà tặng đã chọn:</h5>
            <ul id="selectedGiftsList"></ul>
        </div>

        <div class="d-flex mt-2" style="float: right;">
            <button type="button" onclick="javascript:history.back()" class="btn btn-secondary btn-previou">Quay lại</button>
            <button id="createOrderBtn" type="submit" class="btn btn-system btn-submit ml-2">Tiếp tục chọn giảng viên</button>
        </div>
    </div>
</div>

<style>
    .row-selected {
        background-color: #e0f7fa !important;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const checkboxes = document.querySelectorAll(".checkbox");
        const createOrderBtn = document.getElementById("createOrderBtn");
        const giftListRows = document.querySelectorAll("tbody tr");
        const selectedGiftsList = document.getElementById("selectedGiftsList");

        let datas = [];

        giftListRows.forEach(row => {
            let quantityInput = row.querySelector("input[type='number']");
            let checkbox = row.querySelector(".checkbox");
            let availableQuantity = parseInt(row.querySelector("td:nth-child(5)").innerText);

            quantityInput.addEventListener("input", function () {
                let quantity = parseInt(this.value) || 0;

                if (quantity > availableQuantity) {
                    Swal.fire({
                        icon: "warning",
                        title: "Lỗi số lượng",
                        text: `Số lượng mượn không thể lớn hơn ${availableQuantity}!`,
                    });
                    this.value = availableQuantity;
                    quantity = availableQuantity;
                }

                checkbox.dataset.quantity = quantity;

                // Tự động check nếu nhập số > 0
                checkbox.checked = quantity > 0;

                updategiftList();
            });

            checkbox.addEventListener("change", function () {
                updategiftList();
            });
        });

        function updateRowHighlight(checkbox) {
            const row = checkbox.closest("tr");
            if (checkbox.checked && parseInt(checkbox.dataset.quantity) > 0) {
                row.classList.add("row-selected");
            } else {
                row.classList.remove("row-selected");
            }
        }

        function updategiftList() {
            datas = [];
            selectedGiftsList.innerHTML = "";

            checkboxes.forEach((checkbox) => {
                const quantity = parseInt(checkbox.dataset.quantity) || 0;
                const giftId = checkbox.dataset.id;
                const giftName = checkbox.dataset.name;

                updateRowHighlight(checkbox);

                if (checkbox.checked && quantity > 0) {
                    datas.push({ giftId, quantity });

                    const li = document.createElement("li");
                    li.textContent = `${giftName} - SL mượn: ${quantity}`;
                    selectedGiftsList.appendChild(li);
                }
            });
        }

        createOrderBtn.addEventListener("click", function () {
            let isValid = true;

            if (datas.length === 0) {
                Swal.fire({
                    icon: "error",
                    title: "Lỗi",
                    text: "Vui lòng chọn ít nhất một quà tặng!",
                });
                return;
            }

            for (const { giftId, quantity } of datas) {
                if (quantity <= 0) {
                    Swal.fire({
                        icon: "error",
                        title: "Lỗi số lượng",
                        text: "Số lượng yêu cầu phải lớn hơn 0!",
                    });
                    isValid = false;
                    break;
                }

                const row = document.querySelector(`input[data-id="${giftId}"]`).closest("tr");
                const availableQuantity = parseInt(row.querySelector("td:nth-child(5)").innerText);
                if (quantity > availableQuantity) {
                    Swal.fire({
                        icon: "error",
                        title: "Lỗi số lượng",
                        text: `Số lượng mượn không thể lớn hơn ${availableQuantity}!`,
                    });
                    isValid = false;
                    break;
                }
            }

            if (isValid) {
                localStorage.setItem("data", JSON.stringify(datas));
                window.location.href = "/reward/addOrderChoiceTeacher";
            }
        });
    });
</script>
