<div class="row" id="page-top">
    <div class="col-md-4 text-center">
        <img id="profileAvatar" class="rounded-square img-thumbnail" src="{{device.images}}" alt="Device Image" />
        <p class="text-muted" id="deviceCategory">{{device.category}}</p>
    </div>
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4>Thông tin chi tiết thiết bị</h4>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Tên thiết bị:</strong> <span>{{device.name}}</span>
                    </li>
                    <li class="list-group-item">
                        <strong>Loại thiết bị:</strong> <span>{{device.category}}</span>
                    </li>
                    <li class="list-group-item">
                        <strong>Mô tả:</strong> <span>{{device.description}}</span>
                    </li>
                    <li class="list-group-item">
                        <strong>Tổng số lượng:</strong> <span>{{device.total_quantity}}</span>
                    </li>
                    <li class="list-group-item">
                        <strong>Ngày nhập:</strong> <span>{{formatDate device.created_at}}</span>
                    </li>
                    <li class="list-group-item">
                        <strong>Ngày cập nhật:</strong> <span>{{formatDate device.updated_at}}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="card-header">
        <h4>Danh sách thiết bị cụ thể</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Trạng thái</th>
                        <th>Phòng</th>
                        <th>Vị trí</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each device.device_items}}
                    <tr>
                        <td class="{{#if (eq this.status 'Mới')}}text-primary{{else}}{{#if (eq this.status 'Hoạt động')}}text-success{{else}}{{#if (eq this.status 'Đang sử dụng')}}text-warning{{else}}{{#if (or (eq this.status 'Hỏng') (eq this.status 'Bảo trì'))}}text-danger{{/if}}{{/if}}{{/if}}{{/if}}">
                            {{this.status}}
                        </td>
                        <td>{{this.room}}</td>
                        <td>{{this.location}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="text-right mt-4">
        <button type="button" onclick="javascript:history.back()" class="btn btn-secondary btn-previou">Quay lại</button>
    </div>
</div>

