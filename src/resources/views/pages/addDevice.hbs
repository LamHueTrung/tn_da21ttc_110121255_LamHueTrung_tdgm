            icon: 'success',
            confirmButtonText: 'OK'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/admin/user/listAllUser';
            }
        });
        fetch('/admin/user/clear-create-flag', { method: 'POST' });
    } --}}
});
</script>
